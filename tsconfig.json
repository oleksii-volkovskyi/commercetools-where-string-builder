{
  "ts-node": {
    "files": true,
    "include": ["test/**/*"]
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["@types/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
